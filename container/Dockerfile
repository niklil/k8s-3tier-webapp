# Generated by the modernization agent. Adjust base image/commands as needed.
FROM public.ecr.aws/docker/library/eclipse-temurin:17-jre

WORKDIR /app
COPY . /app
RUN ./mvnw package -DskipTests || ./gradlew build -x test || true

ENV APP_PORT=8080
EXPOSE 8080

HEALTHCHECK --interval=30s --timeout=5s --retries=3 CMD curl -f http://localhost:8080/health || exit 1

CMD ["java", "-jar", "app.jar"]
